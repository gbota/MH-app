{
  "name": "music-school-management",
  "version": "1.0.0",
  "description": "Music School Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "check-env": "node scripts/check-env.js",
    "db:seed": "node scripts/seed-db.js",
    "db:reset": "node scripts/seed-db.js --force",
    "db:backup": "node scripts/backup-db.js backup",
    "db:restore": "node scripts/backup-db.js restore",
    "db:list": "node scripts/backup-db.js list",
    "generate-token": "node scripts/generate-token.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build --no-cache",
    "docker:clean": "docker system prune -a --volumes",
    "seed:admin": "node scripts/seedAdmin.js"
  },
  "_moduleAliases": {
    "@root": ".",
    "@utils": "./server/utils",
    "@models": "./server/models",
    "@controllers": "./server/controllers",
    "@middleware": "./server/middleware",
    "@config": "./server/config",
    "@routes": "./server/routes"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cors-anywhere": "^0.4.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "googleapis": "^126.0.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^7.8.7",
    "morgan": "^1.10.0",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
